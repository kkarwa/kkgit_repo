{
    "name": "nodejsfirst",
    "version": "1.0.0",
    "description": "kapil first node project",
    "main": "index.js",
    "scripts": {
        "create-fiori-deploy-config": "fiori add deploy-config",
        "build": "ui5 build",
        "start_local": "fiori run --open index.html --config ui5-local.yaml",
        "add_UI5": "ui5 use SAPUI5@1.76.0",
        "ui5-addlib": "ui5 add sap.ui.core sap.m themelib_sap_fiori_3 sap.ui.layout",
        "start-old": "ui5 serve --open index.html",
        "start": "fiori run --open index.html",
        "start-dist": "fiori run --open index.html --config ui5-dist.yaml",
        "test": "echo \"Error: no test specified\" && exit 1",
        "deploy": "npm run build && fiori deploy --config ui5-deploy.yaml && rimraf archive.zip",
        "undeploy": "fiori undeploy --config ui5-deploy.yaml",
        "deploy-test": "npm run build && fiori deploy --config ui5-deploy.yaml --testMode true"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kkarwa/kkgit_repo.git"
    },
    "keywords": [
        "simple",
        "node",
        "project"
    ],
    "author": "kapil karwa",
    "license": "ISC",
    "ui5": {
        "dependencies": [
            "@sap/ux-ui5-tooling"
        ]
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.96.0",
        "@sap/ux-ui5-tooling": "^1.4.4",
        "@ui5/cli": "^2.14.2",
        "rimraf": "3.0.2"
    },
    "dependencies": {
        "@sap/generator-fiori": "^1.4.5",
        "yo": "^4.3.0"
    }
}
